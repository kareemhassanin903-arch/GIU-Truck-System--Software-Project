<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Truck Orders - GIU Food-truck System</title>
  <link rel="stylesheet" href="/styles/bootstrap.min.css" />
  <link rel="stylesheet" href="/styles/style.css" />
</head>

<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">GIU Food-truck</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><a href="/ownerDashboard">Owner Dashboard</a></li>
          <li><a href="/menuItems">Menu Items</a></li>
          <li><a href="/addMenuItem">Add Menu Item</a></li>
          <li class="active"><a href="/truckOrders">Truck Orders</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="glass-card" style="margin-top: 30px;">
          <div class="text-center" style="margin-bottom: 40px;">
            <h1 style="margin-bottom: 10px;">Truck Orders</h1>
            <p class="text-muted">Manage and track your food truck orders</p>
          </div>

          <!-- Filter Tabs -->
          <ul class="nav nav-tabs" id="orderFilterTabs" style="margin-bottom: 30px; border-bottom: 2px solid rgba(255, 255, 255, 0.2);">
            <li class="active"><a href="#" data-filter="all">All</a></li>
            <li><a href="#" data-filter="pending">Pending</a></li>
            <li><a href="#" data-filter="preparing">Preparing</a></li>
            <li><a href="#" data-filter="ready">Ready</a></li>
            <li><a href="#" data-filter="completed">Completed</a></li>
            <li><a href="#" data-filter="cancelled">Cancelled</a></li>
          </ul>

          <!-- Loading State -->
          <div id="loadingState" class="text-center" style="display: none; padding: 40px;">
            <div class="spinner-border text-primary" role="status">
              <span class="sr-only">Loading...</span>
            </div>
            <p class="text-muted" style="margin-top: 15px;">Loading orders...</p>
          </div>

          <!-- Orders Container -->
          <div id="ordersContainer">
            <!-- Orders will be loaded here -->
          </div>

          <!-- Empty State -->
          <div id="emptyState" class="text-center" style="display: none; padding: 40px;">
            <h3 style="margin-bottom: 15px; color: #ffa500;">ðŸ“‹</h3>
            <h3 style="margin-bottom: 15px;">No Orders</h3>
            <p class="text-muted">No orders match the selected filter</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Order Details Modal -->
  <div class="modal fade" id="orderDetailsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content" style="background: rgba(26, 26, 46, 0.95); border: 1px solid rgba(255, 255, 255, 0.2);">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">Order Details</h4>
        </div>
        <div class="modal-body">
          <div id="orderDetailsContent">
            <!-- Order details will be loaded here -->
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Update Status Modal -->
  <div class="modal fade" id="updateStatusModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content" style="background: rgba(26, 26, 46, 0.95); border: 1px solid rgba(255, 255, 255, 0.2);">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">Update Order Status</h4>
        </div>
        <div class="modal-body">
          <form id="updateStatusForm">
            <input type="hidden" id="updateOrderId">
            <div class="form-group">
              <label for="updateOrderStatus">Status *</label>
              <select class="form-control" id="updateOrderStatus" required>
                <option value="pending">Pending</option>
                <option value="preparing">Preparing</option>
                <option value="ready">Ready</option>
                <option value="completed">Completed</option>
                <option value="cancelled">Cancelled</option>
              </select>
            </div>
            <div class="form-group">
              <label for="estimatedPickupTime">Estimated Pickup Time</label>
              <input type="datetime-local" class="form-control" id="estimatedPickupTime">
              <small class="text-muted">Optional: Set estimated pickup time when updating status</small>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="saveStatusBtn">Update Status</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/jquery-2.2.0.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/src/apiClient.js"></script>
  <script src="/src/ui.js"></script>
  <script src="/src/truckOrders.js"></script>
</body>

</html>

